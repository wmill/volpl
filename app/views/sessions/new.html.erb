<!DOCTYPE html> 
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1"> 
	<title>Mobitrack</title> 
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "mobile" %>
    <%= stylesheet_link_tag "mobile" %>
</head>
<body>
<!-- Home -->
<div data-role="page" id="login">
    <div data-role="content">
      Test logins: demo, demo1, demo2 <br>
      Password: dev
        <%= form_tag sessions_path, 'data-ajax'=>"false" do %>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="user_name">
                        User Name
                    </label>
                    <%= text_field_tag :user_name, params[:user_name] %>
                </fieldset>
            </div>
            <div data-role="fieldcontain">
                <fieldset data-role="controlgroup">
                    <label for="password">
                        Password
                    </label>
                    <%= password_field_tag :password %>
                </fieldset>
            </div>
            <%= submit_tag "Log In" %>
        <% end %>
    </div>
</div>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36966867-1']);
  _gaq.push(['_setDomainName', 'herokuapp.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</body>
</html>